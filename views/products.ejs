<!DOCTYPE html>
<html>
<% include templates/head.ejs %>
  <body>
    <% include templates/header.ejs %>
      <div class="container-fluid">
        <div class="row">
          <% for(var i = 0; i < items.length; i++){ %>
            <div class="col-sm-6 col-md-4">
              <div class="thumbnail">
                <img src=<%=items[i].image %> alt="altPic" class="img-responsive" />
                <div class="caption">
                  <h3><%= items[i].title %></h3>
                  <p class="description">
                    <%= items[i].description %>
                  </p>
                  <div class="clearfix">
                    <div class="price pull-left">
                      <%= items[i].price %>
                    </div>
                    <a href=<%= "/add/" + items[i].id %> class "btn btn-success pull-right" role="button">Buy</a>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
        </div>
      </div>
  </body>
</html>
